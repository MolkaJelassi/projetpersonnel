<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="600.0" minWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="interfacesMolka.GestionController">
   <center>
      <Label text="Menu" textAlignment="CENTER" textFill="#8c79eb" BorderPane.alignment="CENTER">
         <font>
            <Font size="69.0" />
         </font>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </Label>
   </center>
   <left>
      <Button fx:id="trainingsB" mnemonicParsing="false" onAction="#clickeventTrainingsB" text="Trainings" BorderPane.alignment="CENTER">
         <font>
            <Font size="20.0" />
         </font>
         <BorderPane.margin>
            <Insets left="20.0" />
         </BorderPane.margin>
      </Button>
   </left>
   <right>
      <Button fx:id="staffB" mnemonicParsing="false" onAction="#clickeventStaffB" prefHeight="44.0" prefWidth="119.0" text="Staff" BorderPane.alignment="CENTER">
         <font>
            <Font size="20.0" />
         </font>
         <BorderPane.margin>
            <Insets right="20.0" />
         </BorderPane.margin>
      </Button>
   </right>
   <bottom>
      <Button fx:id="holi" mnemonicParsing="false" onAction="#clickholi" prefHeight="64.0" prefWidth="184.0" text="List of holidays" BorderPane.alignment="CENTER">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
   </bottom>
   <top>
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
   </top>
</BorderPane>
